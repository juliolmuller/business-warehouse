{
  "name": "juliolmuller/data-warehouse-etl",
  "description": "College assignment to create an ETL system to load a Data Warehouse.",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Julio Muller",
      "email": "juliodolago@gmail.com"
    }
  ],
  "scripts": {
    "post-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.2",
    "league/flysystem": "^2.0",
    "vlucas/phpdotenv": "^5.3"
  },
  "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  }
}
